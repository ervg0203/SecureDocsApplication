<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Subtle gradient background -->
    <gradient
        android:startColor="#FFFFFF"
        android:endColor="#F1F3F4"
        android:angle="135" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Soft border for separation -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Padding to give inner content breathing space -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

</shape>
