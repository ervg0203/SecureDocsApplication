<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Gradient for a smooth modern look -->
    <gradient
        android:startColor="#E3F2FD"
        android:endColor="#BBDEFB"
        android:angle="135" />

    <!-- Rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional padding to simulate shadow space -->
    <padding
        android:left="6dp"
        android:top="6dp"
        android:right="6dp"
        android:bottom="6dp" />

    <!-- Slight border for better visual separation -->
    <stroke
        android:width="1dp"
        android:color="#90CAF9" />

</shape>
